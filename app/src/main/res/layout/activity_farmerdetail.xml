<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/coloryellow"
    tools:context="com.example.aniket.registration.farmerdetail">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:hint="Name"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/farmername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textSize="24dp"
            android:hint="Farmer Name"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:hint="Phone"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/farmernumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textSize="24dp"
            android:hint="Farmer Number" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:hint="Address"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/farmeraddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textSize="24dp"
            android:hint="Farmer Address"/>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:hint="Email"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/farmeremail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="24dp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:hint="Farmer Name"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btn_request"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="22dp"
            android:background="#ffa500"
            android:text="Request"
            android:textColor="#fff"
            android:textSize="18sp"/>

    </LinearLayout>
</LinearLayout>

